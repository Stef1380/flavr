<div class="profils-container" data-controller="profiles">
  <div class="position-absolute top-0 start-0 p-3">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png', alt: 'Flavr Logo', class: 'green-logo' %>
    <% end %>
  </div>
  <div class="profils" id="profils" data-profiles-target="list">
    <h2> Qui-êtes vous ?</h2>
      <% @profils.each do |profil| %>
      <div class="profil" data-profiles-target="profile">
        <%= link_to profil_path(profil), class: "avatar" do %>
          <% if profil.photo.present? && profil.photo.key.present? %>
            <%= cl_image_tag profil.photo.key, crop: :fill %>
          <% else %>
            <%= image_tag "chou.png", crop: :fill %> <!-- Image par défaut -->
          <% end %>
        <% end %>
        <h3><%= profil.username %></h3>
    <% end %>
      <%= link_to new_profil_path, class:"avatar" do %>
        <%= image_tag 'addprofil.png'%>
      <% end %>
        <h3>Ajouter un profil</h3>
      </div>
      </div>

  </div>
</div>

<%= render "pages/navbar" %>
